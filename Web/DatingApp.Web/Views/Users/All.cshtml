@model AllUsersInListViewModel

    <div class="text-center mt-3">
        <h2>Your matches - @Model.Users.Count() found</h2>
    </div>

    <div class="container mt-3">
        <form #form="ngForm" class="form-inline mb-3" autocomplete="off">
            <div class="form-group">
                <label>Age from: </label>
                <input type="number" class="form-control ml-1" style="width: 70px;" name="minAge" />
            </div>

            <div class="form-group px-2">
                <label>Age to: </label>
                <input type="number" class="form-control ml-1" style="width: 70px;" name="maxAge" />
            </div>

            <div class="form-group px-2">
                <label>Show: </label>
                <select name="gender" style="width: 130px" class="form-control ml-1">
                    <option>
                        Male
                    </option>
                    <option>
                        Female
                    </option>
                </select>
            </div>

            <button class="btn btn-primary ml-1" type="submit">Apply Filters</button>
            <button (click)="resetFilters()" class="btn btn-info ml-1" type="submit">Reset Filters</button>
            <div class="col">
                <div class="btn-group float-right">
                    <button type="button"
                            class="btn btn-primary"
                            name='orderBy'
                            (click)="loadMembers()"
                            btnRadio='lastActive'
                            [(ngModel)]="userParams.orderBy">
                        Last Active
                    </button>

                    <button type="button"
                            class="btn btn-primary"
                            name='orderBy'
                            (click)="loadMembers()"
                            btnRadio='created'
                            [(ngModel)]="userParams.orderBy">
                        Newest Members
                    </button>
                </div>
            </div>


        </form>
    </div>

    <div class="row">
        @foreach (var user in this.Model.Users)
        {
            <div class="col-2">
                <div class="card mb-4">
                    <div class="card-img-wrapper">
                        <img src="@user.PhotoUrl" alt="@user.Allias" class="card-img-top">
                        <ul class="list-inline member-icons animate text-center">
                            <li class="list-inline-item">
                                <a asp-route-id="@user.Id" asp-controller="Users" asp-action="ById" class="btn btn-primary">
                                    <i class="fa fa-user"></i>
                                </a>
                            </li>
                            <li class="list-inline-item">
                                <button class="btn btn-primary">
                                    <i class="fa fa-heart"></i>
                                </button>
                            </li>
                            <li class="list-inline-item">
                                <button class="btn btn-primary">
                                    <i class="fa fa-envelope"></i>
                                </button>
                            </li>
                        </ul>
                    </div>
                    <div class="card-body p-1">
                        <h6 class="card-title text-center mb-1">
                            <span>
                                <i class="fa fa-user mr-2"></i>
                            </span>

                            @user.Allias, @user.Age
                        </h6>
                        <p class="card-text text-muted text-center">@user.City</p>
                    </div>
                </div>
            </div>
        }
    </div>
